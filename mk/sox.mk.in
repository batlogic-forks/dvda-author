include @BUILDDIR@/mk/sox.global.mk

sox_MAKESPEC=manual
ifeq "@HAVE_autoconf@" "yes"
ifeq "@HAVE_automake@" "yes"
ifeq "@HAVE_libtoolize@" "yes"
sox.depconf: $(sox_DEPENDENCY)
	@if test  "$(MAYBE_$*)" != ""; then
		if test -d "@ROOTDIR@/$(MAYBE_$*)" ; then
			cp "@ROOTDIR@/sox-libs" "@ROOTDIR@/$(MAYBE_$*)/sox-libs.in"
			else
			echo "@ROOTDIR@/$(MAYBE_$*) is not a directory"
			exit -1
		fi
	fi
	$(call configure_lib_package,$*,/usr/bin/autoreconf,-if,CFLAGS=)
else
sox.depconf: 
	echo "Please install libtoolize"
	exit -1

endif
else
sox.depconf:
	echo "Please install automake"
	exit -1

endif
else
sox.depconf:
	echo "Please install autoconf"
	exit -1
endif
