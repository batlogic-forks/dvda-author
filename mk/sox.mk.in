include @BUILDDIR@/mk/sox.global.mk

sox_MAKESPEC=manual

sox.depconf: $(sox_DEPENDENCY)
	@if test  "$(MAYBE_$*)" != ""; then
		if test -d "@ROOTDIR@/$(MAYBE_$*)" ; then
			cp "@ROOTDIR@/sox-libs" "@ROOTDIR@/$(MAYBE_$*)/sox-libs.in"
			else
			echo "@ROOTDIR@/$(MAYBE_$*) is not a directory"
			exit -1
		fi
	fi
	$(call configure_lib_package,$*,/usr/bin/autoreconf,-if,CFLAGS=)
