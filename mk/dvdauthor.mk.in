include @BUILDDIR@/mk/dvdauthor.global.mk

dvdauthor_MAKESPEC=manual
dvdauthor_TESTBINARY=dvdauthor

ifeq "@HAVE_automake@" "yes"
ifeq "@HAVE_autoconf@" "yes"
ifeq "@HAVE_libtoolize@" "yes"
dvdauthor.depconf: Makefile
	@mkdir -p @ROOTDIR@/$(MAYBE_$*)/srcm4
	 cp -f @ROOTDIR@/m4.extra.dvdauthor/*  @ROOTDIR@/$(MAYBE_$*)/srcm4
	$(if $(MAYBE_$*),
	  if test -d @ROOTDIR@/$(MAYBE_$*) ; then
	   cd @ROOTDIR@/$(MAYBE_$*) && $(SHELL) -c "aclocal -Isrcm4 && autoheader && automake -acf && autoconf -Isrcm4" 
	    if test "$$?" = "0"; then 
	    cd @BUILDDIR@
	   else 
	    echo "autoreconf failed for dvdauthor"
	    exit -1
	   fi
	   mkdir -p @BUILDDIR@/$(MAYBE_dvdauthor) && cd @BUILDDIR@/$(MAYBE_dvdauthor)
	   $(SHELL) @ROOTDIR@/$(MAYBE_dvdauthor)/configure  $(CONFIGURE_$*_FLAGS) && $(MAKE) $(PARALLEL) && $(MAKE) install
	   cd @BUILDDIR@
	  fi)
	$(call index,$*,$(EXEEXT),binary)
else
dvdauthor.depconf: 
	echo "Please install libtoolize"
	exit -1


endif
else
dvdauthor.depconf: 
	echo "Please install automake"
	exit -1

endif
else

dvdauthor.depconf: 
	echo "Please install autoconf"
	exit -1
endif
