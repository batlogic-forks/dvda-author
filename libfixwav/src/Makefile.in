

SOURCES:=$(wildcard @ROOTDIR@/@MAYBE_libfixwav@/*.c)
OBJECTS:=$(subst @ROOTDIR@/@MAYBE_libfixwav@,@BUILDDIR@/@MAYBE_libfixwav@, $(SOURCES:.c=.o) )

CPPFLAGS += -I@ROOTDIR@/@MAYBE_libfixwav@/include -I@ROOTDIR@/libutils/src/include -I@ROOTDIR@/src/include -I@ROOTDIR@

ifeq "@HAVE_libiberty_BUILD@" "yes"
	CPPFLAGS +=-I@ROOTDIR@/@MAYBE_libiberty@/include
	ifeq  "@HAVE_EXTERNAL_iberty@" "yes"
	  CPPFLAGS +=-I@ROOTDIR@/@MAYBE_libiberty@/include
	endif
endif

libfixwav.a: libfixwav.a($(OBJECTS))

#implicit rules won't work here
@BUILDDIR@/@MAYBE_libfixwav@/%.o: @ROOTDIR@/@MAYBE_libfixwav@/%.c
	$(CC) -c $(CFLAGS) $(CPPFLAGS) $< -o $@
